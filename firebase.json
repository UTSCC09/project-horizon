{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "runtime": "nodejs16",
    "source": "backend"
  },
  "hosting": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR/../..\" run build"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "backend",
      "**/.*",
      "**/node_modules/**"
    ],
    "public": "frontend/dist/project-horizon/"
  }
}
